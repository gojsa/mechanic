<div id="updateProductionOrderModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" onclick="closeUpdateProductionOrderModal()">&times;</span>
        <form class="form-group" action="#" onsubmit="handleUpdateProductionOrderFormSubmit(event)" method="POST">
            
            <div class="form-group">
                <label class="form-label" for="update_order_mileage">Kilometraza:</label>
                <input class="form-input" type="text" id="update_order_mileage" name="mileage" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_order_note">Napomena:</label>
                <input class="form-input" type="text" id="update_order_note" name="note" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_order_description">Opis:</label>
                <input class="form-input" type="text" id="update_order_description" name="description" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_order_price">Cena:</label>
                <input class="form-input" type="text" id="update_order_price" name="price" required>
            </div>
            <input type="hidden" id="update_order_id" name="production_order_id">
            <button class="form-button" type="button" onclick="updateProductionOrderApi()">Izmeni</button>
        </form>
    </div>
</div>

