<div id="editArticleModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeEditArticleModal()">&times;</span>
        <h2>Izmijeni Artikal</h2>
        <form class="form-group" id="editArticleForm" onsubmit="handleEditArticleFormSubmit(event)">
            <input type="hidden" id="edit_article_id" name="article_id">
            <div class="form-group">
                <label class="form-label" for="edit_article_name">Naziv Artikla:</label>
                <input class="form-input" type="text" id="edit_article_name" name="article_name" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="edit_amount">Koliƒçina:</label>
                <input class="form-input" type="text" id="edit_amount" name="amount" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="edit_price_with_vat">Cijena sa PDV:</label>
                <input class="form-input" type="number" step="0.01" id="edit_price_with_vat" name="price_with_vat" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="edit_note">Napomena:</label>
                <textarea class="form-input" id="edit_note" name="note"></textarea>
            </div>
            <button class="form-button" type="submit">Izmijeni Artikal</button>
        </form>
    </div>
</div>