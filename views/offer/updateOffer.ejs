<div id="updateOfferModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeUpdateOfferModal()">&times;</span>
        <h2>Izmeni Ponudu</h2>
        <form class="form-group" id="updateOfferForm" onsubmit="handleUpdateOfferFormSubmit(event)">
            <input type="hidden" id="update_offer_id" name="offer_id">

            <div class="form-group">
                <label class="form-label" for="update_first_name">Ime:</label>
                <input class="form-input" type="text" id="update_first_name" name="first_name" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_last_name">Prezime:</label>
                <input class="form-input" type="text" id="update_last_name" name="last_name" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_car_name">Naziv Vozila:</label>
                <input class="form-input" type="text" id="update_car_name" name="car_name" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_car_plate">Registarski Broj:</label>
                <input class="form-input" type="text" id="update_car_plate" name="car_plate" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="update_jib">JIB:</label>
                <input class="form-input" type="text" id="update_jib" name="jib" >
            </div>
            <div class="form-group">
                <label class="form-label" for="update_note">Napomena:</label>
                <textarea class="form-input" id="update_note" name="note" ></textarea>
            </div>
            <button class="form-button" type="submit">Izmeni Ponudu</button>
        </form>
    </div>
</div>